<%
    const currentPage = 'settings-payment-gateway';
    const pageTitle = 'üí≥ Payment Gateway Settings';
%>
<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="/js/ui-utils.js"></script>
    <style>
        .settings-section {
            margin-bottom: 30px;
        }
        .setting-item {
            display: flex;
            flex-direction: column;
            gap: 8px;
            padding: 15px;
            border-bottom: 1px solid #eee;
        }
        .setting-item:last-child {
            border-bottom: none;
        }
        .setting-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 5px;
        }
        .setting-description {
            font-size: 13px;
            color: #666;
            margin-bottom: 8px;
        }
        .setting-input {
            width: 100%;
            max-width: 500px;
            padding: 10px 12px;
            border: 2px solid #e0e0e0;
            border-radius: 6px;
            font-size: 14px;
        }
        .setting-select {
            width: 100%;
            max-width: 500px;
            padding: 10px 12px;
            border: 2px solid #e0e0e0;
            border-radius: 6px;
            font-size: 14px;
            background: white;
        }
        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 50px;
            height: 24px;
        }
        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }
        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 24px;
        }
        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 18px;
            width: 18px;
            left: 3px;
            bottom: 3px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }
        input:checked + .toggle-slider {
            background-color: #667eea;
        }
        input:checked + .toggle-slider:before {
            transform: translateX(26px);
        }
        .toggle-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            border-bottom: 1px solid #eee;
        }
        .toggle-item:last-child {
            border-bottom: none;
        }
        .toggle-info {
            flex: 1;
        }
        .gateway-info {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 6px;
            margin-bottom: 15px;
            border-left: 4px solid #667eea;
        }
        .gateway-info h3 {
            margin: 0 0 10px 0;
            color: #333;
            font-size: 16px;
        }
        .gateway-info p {
            margin: 5px 0;
            color: #666;
            font-size: 13px;
        }
        .api-key-wrapper {
            position: relative;
        }
        .api-key-toggle {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            font-size: 18px;
            color: #666;
            padding: 5px;
        }
        .api-key-toggle:hover {
            color: #333;
        }
    </style>
</head>
<body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <%- include('partials/sidebar') %>
    
    <main class="main-content" id="main-content">
        <div class="top-bar">
            <div class="top-bar-left">
                <button class="sidebar-toggle" onclick="toggleSidebar()" aria-label="Toggle sidebar">‚ò∞</button>
                <h1 style="font-size: 24px; color: #333; margin: 0;"><%= pageTitle %></h1>
            </div>
            <div class="top-bar-right">
                <div class="user-info">
                    <span>üë§ <%= username || 'Admin' %></span>
                    <% if (req.session.role) { %>
                        <span class="user-badge"><%= req.session.role %></span>
                    <% } %>
                </div>
                <a href="/admin/change-password" class="btn-top">üîê Ubah Password</a>
                <a href="/logout" class="btn-top btn-logout">Logout</a>
            </div>
        </div>
        
        <div class="container">
            <form id="paymentGatewayForm">
                <!-- Payment Gateway Status -->
                <div class="card settings-section">
                    <div class="card-header">
                        <h2 class="card-title">‚öôÔ∏è Payment Gateway Status</h2>
                    </div>
                    <div class="card-body">
                        <div class="toggle-item">
                            <div class="toggle-info">
                                <div class="setting-label">Enable Payment Gateway</div>
                                <div class="setting-description">Aktifkan atau nonaktifkan payment gateway untuk deposit dan pembayaran</div>
                            </div>
                            <label class="toggle-switch">
                                <input type="checkbox" name="enabled" 
                                    <%= settings.enabled ? 'checked' : '' %>>
                                <span class="toggle-slider"></span>
                            </label>
                        </div>
                    </div>
                </div>
                
                <!-- Ariepulsa Settings -->
                <div class="card settings-section">
                    <div class="card-header">
                        <h2 class="card-title">üí≥ Ariepulsa Payment Gateway</h2>
                    </div>
                    <div class="card-body">
                        <div class="gateway-info">
                            <h3>üìã Informasi Gateway</h3>
                            <p><strong>Provider:</strong> Ariepulsa</p>
                            <p><strong>Metode:</strong> QRIS (QR Code Indonesia Standard)</p>
                            <p><strong>Status:</strong> <span id="gateway-status"><%= settings.enabled ? '‚úÖ Aktif' : '‚ùå Nonaktif' %></span></p>
                        </div>
                        
                        <div class="setting-item">
                            <label class="setting-label">API Key</label>
                            <div class="setting-description">API Key dari Ariepulsa untuk autentikasi. Dapatkan dari dashboard Ariepulsa Anda.</div>
                            <div class="api-key-wrapper">
                                <input type="password" name="apiKey" id="apiKeyInput" class="setting-input" 
                                    value="<%= settings.apiKey || '' %>" 
                                    placeholder="Masukkan API Key Ariepulsa">
                                <button type="button" class="api-key-toggle" onclick="toggleApiKey()" aria-label="Toggle API Key visibility">
                                    üëÅÔ∏è
                                </button>
                            </div>
                        </div>
                        
                        <div class="setting-item">
                            <label class="setting-label">QRIS Channel Code</label>
                            <div class="setting-description">Kode channel untuk QRIS (default: QRISREALTIME)</div>
                            <input type="text" name="qrisChannel" class="setting-input" 
                                value="<%= settings.qrisChannel || 'QRISREALTIME' %>" 
                                placeholder="QRISREALTIME" required>
                        </div>
                        
                        <div class="setting-item">
                            <label class="setting-label">API Endpoint</label>
                            <div class="setting-description">URL endpoint API Ariepulsa</div>
                            <input type="url" name="apiEndpoint" class="setting-input" 
                                value="<%= settings.apiEndpoint || 'https://ariepulsa.my.id/api/qrisrealtime' %>" 
                                placeholder="https://ariepulsa.my.id/api/qrisrealtime" required>
                        </div>
                        
                        <div class="setting-item">
                            <label class="setting-label">Payment Timeout (menit)</label>
                            <div class="setting-description">Waktu expired untuk QRIS payment dalam menit (default: 10 menit)</div>
                            <input type="number" name="paymentTimeout" class="setting-input" 
                                value="<%= settings.paymentTimeout || 10 %>" 
                                min="5" max="60" step="1" required>
                        </div>
                    </div>
                </div>
                
                <!-- Payment Methods -->
                <div class="card settings-section">
                    <div class="card-header">
                        <h2 class="card-title">üí≥ Metode Pembayaran</h2>
                    </div>
                    <div class="card-body">
                        <div class="toggle-item">
                            <div class="toggle-info">
                                <div class="setting-label">Enable QRIS Payment</div>
                                <div class="setting-description">Aktifkan pembayaran menggunakan QRIS untuk deposit dan transaksi</div>
                            </div>
                            <label class="toggle-switch">
                                <input type="checkbox" name="qrisEnabled" 
                                    <%= settings.qrisEnabled !== false ? 'checked' : '' %>>
                                <span class="toggle-slider"></span>
                            </label>
                        </div>
                        
                        <div class="toggle-item">
                            <div class="toggle-info">
                                <div class="setting-label">Enable Saldo Payment</div>
                                <div class="setting-description">Aktifkan pembayaran menggunakan saldo untuk transaksi</div>
                            </div>
                            <label class="toggle-switch">
                                <input type="checkbox" name="saldoEnabled" 
                                    <%= settings.saldoEnabled !== false ? 'checked' : '' %>>
                                <span class="toggle-slider"></span>
                            </label>
                        </div>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="card">
                    <div class="card-body">
                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">
                                üíæ Simpan Settings
                            </button>
                            <a href="/" class="btn btn-secondary">Batal</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
    
    <script>
        function toggleApiKey() {
            const input = document.getElementById('apiKeyInput');
            const button = event.target;
            if (input.type === 'password') {
                input.type = 'text';
                button.textContent = 'üôà';
            } else {
                input.type = 'password';
                button.textContent = 'üëÅÔ∏è';
            }
        }
        
        document.getElementById('paymentGatewayForm').addEventListener('submit', async (e) => {
            e.preventDefault()
            
            const formData = new FormData(e.target)
            const data = {
                enabled: formData.get('enabled') ? 'true' : 'false',
                apiKey: formData.get('apiKey') || '',
                qrisChannel: formData.get('qrisChannel') || 'QRISREALTIME',
                apiEndpoint: formData.get('apiEndpoint') || 'https://ariepulsa.my.id/api/qrisrealtime',
                paymentTimeout: parseInt(formData.get('paymentTimeout')) || 10,
                qrisEnabled: formData.get('qrisEnabled') ? 'true' : 'false',
                saldoEnabled: formData.get('saldoEnabled') ? 'true' : 'false'
            }
            
            try {
                const response = await fetch('/api/settings/payment-gateway', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                })
                
                const result = await response.json()
                
                if (result.success) {
                    toast.success(result.message || 'Payment gateway settings berhasil disimpan!', 'Berhasil')
                    setTimeout(() => {
                        window.location.reload()
                    }, 1500)
                } else {
                    toast.error(result.error || 'Gagal menyimpan settings', 'Error')
                }
            } catch (error) {
                console.error('Error saving payment gateway settings:', error)
                toast.error('Terjadi kesalahan saat menyimpan settings', 'Error')
            }
        })
        
        // Update gateway status display when enabled checkbox changes
        document.querySelector('input[name="enabled"]').addEventListener('change', function() {
            const statusEl = document.getElementById('gateway-status')
            statusEl.textContent = this.checked ? '‚úÖ Aktif' : '‚ùå Nonaktif'
        })
    </script>
</body>
</html>
