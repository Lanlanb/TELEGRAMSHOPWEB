<%
    const currentPage = 'admin-users';
    const pageTitle = action === 'tambah' ? 'Tambah Admin' : 'Edit Admin';
%>
<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="/js/ui-utils.js"></script>
    <style>
        .admin-form-card { max-width: 520px; }
        .admin-form-card .card-body { padding: 24px; }
        .input-wrap { position: relative; }
        .input-wrap .form-input { padding-right: 44px; }
        .toggle-password {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            padding: 4px;
            cursor: pointer;
            color: #666;
            font-size: 18px;
            line-height: 1;
            border-radius: 4px;
        }
        .toggle-password:hover { color: #333; background: #eee; }
        .checkbox-row {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 0;
        }
        .checkbox-row input[type="checkbox"] {
            width: 20px;
            height: 20px;
            accent-color: #667eea;
            cursor: pointer;
        }
        .checkbox-row label { margin: 0; cursor: pointer; font-weight: 500; }
    </style>
</head>
<body>
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <%- include('partials/sidebar') %>

    <main class="main-content" id="main-content">
        <div class="top-bar">
            <div class="top-bar-left">
                <button class="sidebar-toggle" onclick="toggleSidebar()" aria-label="Toggle sidebar">‚ò∞</button>
                <h1 style="font-size: 24px; color: #333; margin: 0;">
                    <%= action === 'tambah' ? '‚ûï Tambah Admin' : '‚úèÔ∏è Edit Admin' %>
                </h1>
            </div>
            <div class="top-bar-right">
                <div class="user-info">
                    <span>üë§ <%= username || 'Admin' %></span>
                    <% if (typeof req !== 'undefined' && req.session && req.session.role) { %>
                        <span class="user-badge"><%= req.session.role %></span>
                    <% } %>
                </div>
                <a href="/admin/users" class="btn-top">‚Üê Admin Users</a>
                <a href="/admin/change-password" class="btn-top">üîê Ubah Password</a>
                <a href="/logout" class="btn-top btn-logout">Logout</a>
            </div>
        </div>

        <div class="container">
            <div class="form-container">
                <div class="card admin-form-card">
                    <div class="card-header">
                        <h2 class="card-title">
                            <%= action === 'tambah' ? 'Data Admin Baru' : 'Edit Data Admin' %>
                        </h2>
                    </div>
                    <div class="card-body">
                        <% if (error) { %>
                            <div class="alert alert-error" style="margin-bottom: 20px;">‚ùå <%= error %></div>
                        <% } %>

                        <form method="POST" action="<%= action === 'tambah' ? '/admin/users/tambah' : '/admin/users/edit/' + admin.id %>" data-loading>
                            <div class="form-group">
                                <label class="form-label" for="username">Username <span class="required">*</span></label>
                                <input
                                    type="text"
                                    id="username"
                                    name="username"
                                    class="form-input"
                                    value="<%= admin ? admin.username : '' %>"
                                    required
                                    autofocus
                                    placeholder="Masukkan username"
                                >
                                <div class="form-help">Username untuk login ke dashboard. Akan disimpan dalam huruf kecil.</div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="password">
                                    Password <%= action === 'edit' ? '(kosongkan jika tidak ingin mengubah)' : '<span class="required">*</span>' %>
                                </label>
                                <div class="input-wrap">
                                    <input
                                        type="password"
                                        id="password"
                                        name="password"
                                        class="form-input"
                                        <%= action === 'tambah' ? 'required' : '' %>
                                        placeholder="<%= action === 'edit' ? 'Biarkan kosong untuk tetap pakai password lama' : 'Masukkan password' %>"
                                    >
                                    <button type="button" class="toggle-password" onclick="toggleVisibility('password', this)" aria-label="Tampilkan password">üëÅ</button>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="role">Role <span class="required">*</span></label>
                                <select id="role" name="role" class="form-select" required>
                                    <option value="">Pilih Role</option>
                                    <option value="admin" <%= admin && admin.role === 'admin' ? 'selected' : '' %>>Admin (Full Access)</option>
                                    <option value="staff" <%= admin && admin.role === 'staff' ? 'selected' : '' %>>Staff (Limited Access)</option>
                                    <option value="viewer" <%= admin && admin.role === 'viewer' ? 'selected' : '' %>>Viewer (Read Only)</option>
                                </select>
                                <div class="form-help">Admin: akses penuh. Staff: akses terbatas. Viewer: hanya baca.</div>
                            </div>

                            <% if (action === 'edit') { %>
                                <div class="form-group">
                                    <div class="checkbox-row">
                                        <input type="checkbox" id="is_active" name="is_active" <%= admin && admin.is_active ? 'checked' : '' %>>
                                        <label for="is_active">Aktif (admin dapat login)</label>
                                    </div>
                                </div>
                            <% } %>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">
                                    <%= action === 'tambah' ? '‚ûï Tambah Admin' : 'üíæ Simpan Perubahan' %>
                                </button>
                                <a href="/admin/users" class="btn btn-secondary">Batal</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <div class="quick-actions">
        <button class="quick-action-btn" onclick="window.scrollTo({top: 0, behavior: 'smooth'})" aria-label="Scroll to top" title="Scroll to top">‚Üë</button>
    </div>

    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById('sidebar');
            if (sidebar) {
                sidebar.classList.toggle('collapsed');
                sidebar.classList.toggle('open');
            }
        }
        function toggleVisibility(inputId, btn) {
            var el = document.getElementById(inputId);
            if (!el) return;
            if (el.type === 'password') {
                el.type = 'text';
                btn.setAttribute('aria-label', 'Sembunyikan password');
                btn.textContent = 'üôà';
            } else {
                el.type = 'password';
                btn.setAttribute('aria-label', 'Tampilkan password');
                btn.textContent = 'üëÅ';
            }
        }
        document.addEventListener('click', function(e) {
            var sidebar = document.getElementById('sidebar');
            var toggleBtn = document.querySelector('.sidebar-toggle');
            if (window.innerWidth <= 768 && sidebar && sidebar.classList.contains('open') && !sidebar.contains(e.target) && toggleBtn && !toggleBtn.contains(e.target)) {
                sidebar.classList.remove('open');
            }
        });
        window.addEventListener('resize', function() {
            var sidebar = document.getElementById('sidebar');
            if (window.innerWidth > 768 && sidebar) sidebar.classList.remove('open');
        });
    </script>
    <script src="/js/notifications.js"></script>
</body>
</html>
