<%
    const currentPage = 'admin-login';
    const pageTitle = 'Login History';
    const fromItem = totalCount === 0 ? 0 : (currentPage - 1) * (typeof limit !== 'undefined' ? limit : 50) + 1;
    const toItem = Math.min(currentPage * (typeof limit !== 'undefined' ? limit : 50), totalCount || 0);
%>
<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="/js/ui-utils.js"></script>
    <style>
        .login-history-card .card-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 12px;
        }
        .history-stats { font-size: 14px; color: #666; }
        .history-stats strong { color: #333; }
        .table-wrapper th,
        .table-wrapper td { padding: 12px 10px; }
        .table-wrapper .user-agent-cell {
            max-width: 280px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        .pagination-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 12px;
            padding: 16px 0 0;
            border-top: 1px solid #eee;
            margin-top: 16px;
        }
    </style>
</head>
<body>
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <%- include('partials/sidebar') %>

    <main class="main-content" id="main-content">
        <div class="top-bar">
            <div class="top-bar-left">
                <button class="sidebar-toggle" onclick="toggleSidebar()" aria-label="Toggle sidebar">‚ò∞</button>
                <h1 style="font-size: 24px; color: #333; margin: 0;">üìã Login History</h1>
            </div>
            <div class="top-bar-right">
                <div class="user-info">
                    <span>üë§ <%= username || 'Admin' %></span>
                    <% if (typeof req !== 'undefined' && req.session && req.session.role) { %>
                        <span class="user-badge"><%= req.session.role %></span>
                    <% } %>
                </div>
                <a href="/admin/change-password" class="btn-top">üîê Ubah Password</a>
                <a href="/logout" class="btn-top btn-logout">Logout</a>
            </div>
        </div>

        <div class="container">
            <div class="card login-history-card">
                <div class="card-header">
                    <h2 class="card-title">Riwayat Login</h2>
                    <span class="history-stats">
                        <% if (totalCount != null && totalCount > 0) { %>
                            Menampilkan <strong><%= fromItem %>‚Äì<%= toItem %></strong> dari <strong><%= totalCount %></strong> riwayat
                        <% } else if (loginHistory.length > 0) { %>
                            <strong><%= loginHistory.length %></strong> riwayat
                        <% } %>
                    </span>
                </div>
                <div class="card-body">
                    <p style="color: #666; font-size: 14px; margin-bottom: 16px;">Riwayat login semua admin (berhasil dan gagal).</p>

                    <div class="table-wrapper">
                        <table>
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Status</th>
                                    <th>IP Address</th>
                                    <th>User Agent</th>
                                    <th>Waktu Login</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (loginHistory.length === 0) { %>
                                    <tr>
                                        <td colspan="5">
                                            <div class="empty-state">
                                                <div class="empty-state-icon">üìã</div>
                                                <div class="empty-state-title">Belum ada riwayat login</div>
                                                <div class="empty-state-description">Riwayat login akan muncul di sini setelah admin melakukan login</div>
                                            </div>
                                        </td>
                                    </tr>
                                <% } else { %>
                                    <% loginHistory.forEach(login => { %>
                                        <tr>
                                            <td><strong><%= login.username %></strong></td>
                                            <td>
                                                <% if (login.status === 'success') { %>
                                                    <span class="status-badge status-success">Berhasil</span>
                                                <% } else { %>
                                                    <span class="status-badge status-danger">Gagal</span>
                                                <% } %>
                                            </td>
                                            <td><%= login.ip_address || '-' %></td>
                                            <td class="user-agent-cell" title="<%= (login.user_agent || '-').replace(/"/g, '&quot;') %>"><%= login.user_agent || '-' %></td>
                                            <td><%= formatTanggal(login.login_time) %></td>
                                        </tr>
                                    <% }) %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <% if (totalPages > 1) { %>
                        <div class="pagination-bar">
                            <span class="pagination-info">Halaman <%= currentPage %> dari <%= totalPages %></span>
                            <div class="pagination-controls">
                                <% if (currentPage > 1) { %>
                                    <a href="?page=<%= currentPage - 1 %>" class="pagination-btn">‚Üê Sebelumnya</a>
                                <% } else { %>
                                    <span class="pagination-btn" style="opacity: 0.5; cursor: not-allowed;">‚Üê Sebelumnya</span>
                                <% } %>
                                <% if (currentPage < totalPages) { %>
                                    <a href="?page=<%= currentPage + 1 %>" class="pagination-btn">Selanjutnya ‚Üí</a>
                                <% } else { %>
                                    <span class="pagination-btn" style="opacity: 0.5; cursor: not-allowed;">Selanjutnya ‚Üí</span>
                                <% } %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <div class="quick-actions">
        <button class="quick-action-btn" onclick="window.scrollTo({top: 0, behavior: 'smooth'})" aria-label="Scroll to top" title="Scroll to top">‚Üë</button>
    </div>

    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById('sidebar');
            if (sidebar) {
                sidebar.classList.toggle('collapsed');
                sidebar.classList.toggle('open');
            }
        }
        document.addEventListener('click', function(e) {
            var sidebar = document.getElementById('sidebar');
            var toggleBtn = document.querySelector('.sidebar-toggle');
            if (window.innerWidth <= 768 && sidebar && sidebar.classList.contains('open') && !sidebar.contains(e.target) && toggleBtn && !toggleBtn.contains(e.target)) {
                sidebar.classList.remove('open');
            }
        });
        window.addEventListener('resize', function() {
            var sidebar = document.getElementById('sidebar');
            if (window.innerWidth > 768 && sidebar) sidebar.classList.remove('open');
        });
    </script>
    <script src="/js/notifications.js"></script>
</body>
</html>
