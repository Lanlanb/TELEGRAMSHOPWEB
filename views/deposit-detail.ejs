<%
    const currentPage = 'deposit';
    const pageTitle = 'Detail Deposit';
%>
<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="/js/ui-utils.js"></script>
    <style>
        .detail-page .card { margin-bottom: 20px; }
        .detail-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
            gap: 16px;
            margin-bottom: 0;
        }
        .detail-stat {
            background: linear-gradient(135deg, #f8f9fa 0%, #eee 100%);
            padding: 18px;
            border-radius: 12px;
            border-left: 4px solid #667eea;
        }
        .detail-stat .label {
            font-size: 12px;
            color: #666;
            margin-bottom: 6px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        .detail-stat .value {
            font-size: 18px;
            font-weight: 700;
            color: #333;
        }
        .detail-stat .value.total { color: #28a745; font-size: 20px; }
        .info-rows { padding: 0; }
        .info-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 0;
            border-bottom: 1px solid #eee;
            gap: 16px;
            flex-wrap: wrap;
        }
        .info-row:last-child { border-bottom: none; }
        .info-label { color: #666; font-weight: 500; font-size: 14px; }
        .info-value { color: #333; font-weight: 600; font-size: 14px; }
        .info-value code { font-size: 13px; padding: 4px 8px; background: #f0f0f0; border-radius: 6px; }
        .detail-actions { display: flex; gap: 12px; flex-wrap: wrap; margin-top: 0; }
        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: 600;
            display: inline-block;
        }
        .status-pending { background: #fff3cd; color: #856404; }
        .status-success { background: #d4edda; color: #155724; }
        .status-failed { background: #f8d7da; color: #721c24; }
        .status-expired { background: #e2e3e5; color: #383d41; }
        .alert-banner { margin-bottom: 20px; }
    </style>
</head>
<body>
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <%- include('partials/sidebar') %>

    <main class="main-content" id="main-content">
        <div class="top-bar">
            <div class="top-bar-left">
                <button class="sidebar-toggle" onclick="toggleSidebar()" aria-label="Toggle sidebar">‚ò∞</button>
                <h1 style="font-size: 24px; color: #333; margin: 0;">üíµ Detail Deposit</h1>
            </div>
            <div class="top-bar-right">
                <div class="user-info">
                    <span>üë§ <%= username || 'Admin' %></span>
                    <% if (typeof req !== 'undefined' && req.session && req.session.role) { %>
                        <span class="user-badge"><%= req.session.role %></span>
                    <% } %>
                </div>
                <a href="/deposit" class="btn-top">‚Üê Deposit</a>
                <a href="/admin/change-password" class="btn-top">üîê Ubah Password</a>
                <a href="/logout" class="btn-top btn-logout">Logout</a>
            </div>
        </div>

        <div class="container detail-page">
            <!-- Alert: success approve -->
            <% if (req.query && req.query.success === 'approve') { %>
                <div class="alert alert-success alert-banner" role="alert">
                    ‚úÖ Deposit berhasil disetujui. Saldo user telah ditambahkan.
                </div>
            <% } %>
            <!-- Alert: success reject (info style, bukan success hijau) -->
            <% if (req.query && req.query.success === 'reject') { %>
                <div class="alert alert-info alert-banner" role="alert">
                    ‚ÑπÔ∏è Deposit telah ditolak.
                </div>
            <% } %>
            <!-- Alert: errors -->
            <% if (req.query && req.query.error === 'notfound') { %>
                <div class="alert alert-error alert-banner" role="alert">
                    ‚ùå Deposit tidak ditemukan.
                </div>
            <% } %>
            <% if (req.query && req.query.error === 'alreadyprocessed') { %>
                <div class="alert alert-error alert-banner" role="alert">
                    ‚ùå Deposit sudah diproses sebelumnya.
                </div>
            <% } %>
            <% if (req.query && req.query.error === 'usernotfound') { %>
                <div class="alert alert-error alert-banner" role="alert">
                    ‚ùå User tidak ditemukan. Status deposit telah di-rollback.
                </div>
            <% } %>
            <% if (req.query && (req.query.error === 'approve' || req.query.error === 'reject')) { %>
                <div class="alert alert-error alert-banner" role="alert">
                    ‚ùå Gagal memproses deposit.
                </div>
            <% } %>

            <!-- Header & Stats -->
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Deposit <code><%= deposit.kode_deposit %></code></h2>
                    <span class="status-badge status-<%= deposit.status === 'pending' ? 'pending' : deposit.status === 'success' ? 'success' : deposit.status === 'failed' ? 'failed' : 'expired' %>">
                        <%= deposit.status === 'pending' ? '‚è≥ Pending' : deposit.status === 'success' ? '‚úÖ Success' : deposit.status === 'failed' ? '‚ùå Ditolak' : '‚è∞ Expired' %>
                    </span>
                </div>
                <div class="card-body">
                    <div class="detail-stats">
                        <div class="detail-stat">
                            <div class="label">Jumlah</div>
                            <div class="value"><%= formatrupiah(deposit.jumlah) %></div>
                        </div>
                        <div class="detail-stat">
                            <div class="label">Fee</div>
                            <div class="value"><%= formatrupiah(deposit.fee) %></div>
                        </div>
                        <div class="detail-stat">
                            <div class="label">Total</div>
                            <div class="value total"><%= formatrupiah(deposit.total) %></div>
                        </div>
                        <div class="detail-stat">
                            <div class="label">Tanggal</div>
                            <div class="value" style="font-size: 15px;"><%= formatTanggal(deposit.tanggal) %></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informasi Deposit -->
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">üìã Informasi Deposit</h2>
                </div>
                <div class="card-body info-rows">
                    <div class="info-row">
                        <span class="info-label">Kode Deposit</span>
                        <span class="info-value"><code><%= deposit.kode_deposit %></code></span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">User ID</span>
                        <span class="info-value"><code><%= deposit.user_id %></code></span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Metode</span>
                        <span class="info-value"><%= deposit.metode === 'qris' ? 'üí≥ QRIS' : 'üë§ Manual' %></span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Status</span>
                        <span class="info-value">
                            <span class="status-badge status-<%= deposit.status === 'pending' ? 'pending' : deposit.status === 'success' ? 'success' : deposit.status === 'failed' ? 'failed' : 'expired' %>">
                                <%= deposit.status === 'pending' ? '‚è≥ Pending' : deposit.status === 'success' ? '‚úÖ Success' : deposit.status === 'failed' ? '‚ùå Ditolak' : '‚è∞ Expired' %>
                            </span>
                        </span>
                    </div>
                </div>
            </div>

            <% if (user) { %>
            <!-- Informasi User -->
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">üë§ Informasi User</h2>
                </div>
                <div class="card-body info-rows">
                    <div class="info-row">
                        <span class="info-label">User ID</span>
                        <span class="info-value"><code><%= user.id %></code></span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Saldo Saat Ini</span>
                        <span class="info-value" style="color: #28a745;"><%= formatrupiah(user.saldo || 0) %></span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Total Transaksi</span>
                        <span class="info-value"><%= user.jumlahtransaksi || 0 %></span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Total Pengeluaran</span>
                        <span class="info-value"><%= formatrupiah(user.pengeluaran || 0) %></span>
                    </div>
                </div>
                <div class="card-body" style="padding-top: 0;">
                    <a href="/user/<%= user.id %>" class="btn btn-primary">üëÅÔ∏è Lihat Profil User</a>
                </div>
            </div>
            <% } %>

            <!-- Actions -->
            <div class="card">
                <div class="card-body">
                    <div class="detail-actions">
                        <% if (deposit.status === 'pending') { %>
                            <form method="POST" action="/deposit/<%= deposit.id %>/approve" style="display: inline;">
                                <button type="submit" class="btn btn-success" onclick="return confirm('Yakin approve deposit ini? Saldo user akan ditambahkan.')">
                                    ‚úÖ Approve
                                </button>
                            </form>
                            <form method="POST" action="/deposit/<%= deposit.id %>/reject" style="display: inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Yakin tolak deposit ini?')">
                                    ‚ùå Tolak
                                </button>
                            </form>
                        <% } %>
                        <a href="/deposit" class="btn btn-secondary">‚Üê Kembali ke Daftar</a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <div class="quick-actions">
        <button class="quick-action-btn" onclick="window.scrollTo({top: 0, behavior: 'smooth'})" aria-label="Scroll to top" title="Scroll to top">‚Üë</button>
    </div>

    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById('sidebar');
            if (sidebar) {
                sidebar.classList.toggle('collapsed');
                sidebar.classList.toggle('open');
            }
        }
        document.addEventListener('click', function(e) {
            var sidebar = document.getElementById('sidebar');
            var toggleBtn = document.querySelector('.sidebar-toggle');
            if (window.innerWidth <= 768 && sidebar && sidebar.classList.contains('open') && !sidebar.contains(e.target) && toggleBtn && !toggleBtn.contains(e.target)) {
                sidebar.classList.remove('open');
            }
        });
        window.addEventListener('resize', function() {
            var sidebar = document.getElementById('sidebar');
            if (window.innerWidth > 768 && sidebar) sidebar.classList.remove('open');
        });
    </script>
    <script src="/js/notifications.js"></script>
</body>
</html>
