<%
    const currentPage = 'communication';
    const pageTitle = 'üìú Detail Message History';
%>
<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="/js/ui-utils.js"></script>
</head>
<body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <%- include('partials/sidebar') %>
    
    <main class="main-content" id="main-content">
        <div class="top-bar">
            <div class="top-bar-left">
                <button class="sidebar-toggle" onclick="toggleSidebar()" aria-label="Toggle sidebar">‚ò∞</button>
                <h1 style="font-size: 24px; color: #333; margin: 0;"><%= pageTitle %></h1>
            </div>
            <div class="top-bar-right">
                <div class="user-info">
                    <span>üë§ <%= username || 'Admin' %></span>
                    <% if (req.session.role) { %>
                        <span class="user-badge"><%= req.session.role %></span>
                    <% } %>
                </div>
                <a href="/communication/history" class="btn-top">üìú History</a>
                <a href="/communication/broadcast" class="btn-top">üì¢ Broadcast</a>
                <a href="/admin/change-password" class="btn-top">üîê Ubah Password</a>
                <a href="/logout" class="btn-top btn-logout">Logout</a>
            </div>
        </div>
        
        <div class="container">
            <% if (success === 'broadcast') { %>
                <div class="alert alert-success">
                    <span class="alert-icon">‚úÖ</span>
                    <div class="alert-content">
                        <strong>Berhasil!</strong> Broadcast berhasil dikirim!
                    </div>
                </div>
            <% } else if (success === 'send') { %>
                <div class="alert alert-success">
                    <span class="alert-icon">‚úÖ</span>
                    <div class="alert-content">
                        <strong>Berhasil!</strong> Pesan berhasil dikirim!
                    </div>
                </div>
            <% } %>

            <!-- Message Info Card -->
            <div class="card" style="margin-bottom: 24px;">
                <div class="card-header">
                    <h2 class="card-title">üìã Informasi Pesan</h2>
                </div>
                <div class="card-body">
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-label">
                                <span class="info-icon">üìÖ</span>
                                <span>Tanggal</span>
                            </div>
                            <div class="info-value"><%= formatTanggal(message.created_at) %></div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">
                                <span class="info-icon">üìã</span>
                                <span>Tipe</span>
                            </div>
                            <div class="info-value">
                                <% if (message.message_type === 'broadcast') { %>
                                    <span class="badge badge-warning">
                                        <span class="badge-icon">üì¢</span>
                                        <span>Broadcast</span>
                                    </span>
                                <% } else if (message.message_type === 'single') { %>
                                    <span class="badge badge-info">
                                        <span class="badge-icon">‚úâÔ∏è</span>
                                        <span>Single</span>
                                    </span>
                                <% } else { %>
                                    <span class="badge badge-secondary">
                                        <span class="badge-icon">üìù</span>
                                        <span>Template</span>
                                    </span>
                                <% } %>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">
                                <span class="info-icon">üë•</span>
                                <span>Penerima</span>
                            </div>
                            <div class="info-value">
                                <% if (message.recipient_type === 'all') { %>
                                    <div class="recipient-info">
                                        <span class="recipient-icon">üë•</span>
                                        <div>
                                            <strong>Semua User</strong>
                                            <small><%= message.recipient_count %> user</small>
                                        </div>
                                    </div>
                                <% } else { %>
                                    <div class="recipient-info">
                                        <span class="recipient-icon">üë§</span>
                                        <div>
                                            <strong>User ID: <%= message.recipient_id %></strong>
                                            <% if (user) { %>
                                                <small>Saldo: Rp <%= user.saldo ? user.saldo.toLocaleString('id-ID') : '0' %></small>
                                            <% } %>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">
                                <span class="info-icon">üìä</span>
                                <span>Status</span>
                            </div>
                            <div class="info-value">
                                <% if (message.status === 'completed') { %>
                                    <span class="status-badge status-success">
                                        <span class="status-icon">‚úÖ</span>
                                        <span>Completed</span>
                                    </span>
                                <% } else if (message.status === 'partial') { %>
                                    <span class="status-badge status-warning">
                                        <span class="status-icon">‚ö†Ô∏è</span>
                                        <span>Partial</span>
                                    </span>
                                <% } else if (message.status === 'failed') { %>
                                    <span class="status-badge status-danger">
                                        <span class="status-icon">‚ùå</span>
                                        <span>Failed</span>
                                    </span>
                                <% } else if (message.status === 'sending') { %>
                                    <span class="status-badge status-info">
                                        <span class="status-icon">‚è≥</span>
                                        <span>Sending</span>
                                    </span>
                                <% } else { %>
                                    <span class="status-badge status-secondary">
                                        <span class="status-icon">‚è∏Ô∏è</span>
                                        <span>Pending</span>
                                    </span>
                                <% } %>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">
                                <span class="info-icon">üìà</span>
                                <span>Hasil</span>
                            </div>
                            <div class="info-value">
                                <div class="result-stats">
                                    <div class="result-stat result-success">
                                        <span class="result-icon">‚úÖ</span>
                                        <div>
                                            <div class="result-label">Berhasil</div>
                                            <div class="result-value"><%= message.success_count || 0 %></div>
                                        </div>
                                    </div>
                                    <div class="result-stat result-failed">
                                        <span class="result-icon">‚ùå</span>
                                        <div>
                                            <div class="result-label">Gagal</div>
                                            <div class="result-value"><%= message.failed_count || 0 %></div>
                                        </div>
                                    </div>
                                    <% if (message.recipient_type === 'all') { %>
                                        <div class="result-stat result-total">
                                            <span class="result-icon">üë•</span>
                                            <div>
                                                <div class="result-label">Total</div>
                                                <div class="result-value"><%= message.recipient_count %></div>
                                            </div>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">
                                <span class="info-icon">üë§</span>
                                <span>Dikirim Oleh</span>
                            </div>
                            <div class="info-value"><%= message.username || 'System' %></div>
                        </div>
                        <% if (message.sent_at) { %>
                            <div class="info-item">
                                <div class="info-label">
                                    <span class="info-icon">‚è∞</span>
                                    <span>Waktu Terkirim</span>
                                </div>
                                <div class="info-value"><%= formatTanggal(message.sent_at) %></div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Message Content Card -->
            <div class="card" style="margin-bottom: 24px;">
                <div class="card-header">
                    <h2 class="card-title">üí¨ Isi Pesan</h2>
                </div>
                <div class="card-body">
                    <div class="message-preview">
                        <pre class="message-text"><%= message.message_text %></pre>
                    </div>
                </div>
            </div>

            <!-- Error Details Card -->
            <% if (message.error_details && message.error_details.length > 0) { %>
                <div class="card card-error" style="margin-bottom: 24px;">
                    <div class="card-header">
                        <h2 class="card-title" style="color: #dc3545;">
                            <span class="card-title-icon">‚ùå</span>
                            Error Details
                        </h2>
                    </div>
                    <div class="card-body">
                        <div class="error-list">
                            <% message.error_details.forEach((err, index) => { %>
                                <div class="error-item">
                                    <div class="error-header">
                                        <span class="error-icon">‚ö†Ô∏è</span>
                                        <strong>User ID: <%= err.userId %></strong>
                                    </div>
                                    <div class="error-message"><%= err.error %></div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            <% } %>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <a href="/communication/history" class="btn btn-secondary btn-lg">
                    <span class="btn-icon">‚Üê</span>
                    <span>Kembali ke History</span>
                </a>
                <% if (message.message_type === 'broadcast') { %>
                    <a href="/communication/broadcast" class="btn btn-primary btn-lg">
                        <span class="btn-icon">üì¢</span>
                        <span>Kirim Broadcast Lagi</span>
                    </a>
                <% } else { %>
                    <a href="/communication/send" class="btn btn-primary btn-lg">
                        <span class="btn-icon">‚úâÔ∏è</span>
                        <span>Kirim Pesan Lagi</span>
                    </a>
                <% } %>
            </div>
        </div>
    </main>

    <style>
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 24px;
        }

        .info-item {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .info-label {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 13px;
            font-weight: 600;
            color: #666;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .info-icon {
            font-size: 16px;
        }

        .info-value {
            font-size: 15px;
            color: #333;
            font-weight: 500;
        }

        .badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 8px 14px;
            border-radius: 8px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .badge-icon {
            font-size: 14px;
        }

        .badge-warning {
            background: #fff3cd;
            color: #856404;
        }

        .badge-info {
            background: #d1ecf1;
            color: #0c5460;
        }

        .badge-secondary {
            background: #e2e3e5;
            color: #383d41;
        }

        .recipient-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .recipient-icon {
            font-size: 24px;
        }

        .recipient-info strong {
            display: block;
            font-size: 15px;
            color: #333;
            margin-bottom: 4px;
        }

        .recipient-info small {
            display: block;
            font-size: 13px;
            color: #666;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 16px;
            border-radius: 8px;
            font-size: 13px;
            font-weight: 600;
        }

        .status-icon {
            font-size: 16px;
        }

        .status-success {
            background: #d4edda;
            color: #155724;
        }

        .status-warning {
            background: #fff3cd;
            color: #856404;
        }

        .status-danger {
            background: #f8d7da;
            color: #721c24;
        }

        .status-info {
            background: #d1ecf1;
            color: #0c5460;
        }

        .status-secondary {
            background: #e2e3e5;
            color: #383d41;
        }

        .result-stats {
            display: flex;
            gap: 16px;
            flex-wrap: wrap;
        }

        .result-stat {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 16px;
            border-radius: 8px;
            min-width: 120px;
        }

        .result-icon {
            font-size: 24px;
        }

        .result-success {
            background: #d4edda;
            color: #155724;
        }

        .result-failed {
            background: #f8d7da;
            color: #721c24;
        }

        .result-total {
            background: #d1ecf1;
            color: #0c5460;
        }

        .result-label {
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            opacity: 0.8;
            margin-bottom: 2px;
        }

        .result-value {
            font-size: 20px;
            font-weight: 700;
            line-height: 1;
        }

        .message-preview {
            background: #f8f9fa;
            border-left: 4px solid #667eea;
            border-radius: 8px;
            padding: 20px;
        }

        .message-text {
            white-space: pre-wrap;
            word-wrap: break-word;
            font-family: 'Courier New', monospace;
            font-size: 14px;
            line-height: 1.8;
            color: #333;
            margin: 0;
        }

        .card-error {
            border-left: 4px solid #dc3545;
        }

        .card-title-icon {
            margin-right: 8px;
        }

        .error-list {
            display: flex;
            flex-direction: column;
            gap: 12px;
            max-height: 400px;
            overflow-y: auto;
        }

        .error-item {
            padding: 16px;
            background: #f8d7da;
            border-radius: 8px;
            border-left: 4px solid #dc3545;
        }

        .error-header {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 8px;
            color: #721c24;
            font-weight: 600;
        }

        .error-icon {
            font-size: 18px;
        }

        .error-message {
            color: #721c24;
            font-size: 13px;
            line-height: 1.6;
        }

        .action-buttons {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
            margin-top: 24px;
        }

        .btn-lg {
            padding: 14px 28px;
            font-size: 16px;
        }

        @media (max-width: 768px) {
            .info-grid {
                grid-template-columns: 1fr;
            }

            .result-stats {
                flex-direction: column;
            }

            .action-buttons {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</body>
</html>
