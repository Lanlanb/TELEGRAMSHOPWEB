<%
    const currentPage = 'user';
    const pageTitle = 'Daftar User';
    const limit = 50;
    const fromItem = totalUsers === 0 ? 0 : (currentPageNum - 1) * limit + 1;
    const toItem = Math.min(currentPageNum * limit, totalUsers || 0);
%>
<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="/js/ui-utils.js"></script>
    <style>
        .user-stats {
            display: flex;
            align-items: center;
            gap: 12px;
            flex-wrap: wrap;
            font-size: 14px;
            color: #666;
        }
        .user-stats strong { color: #333; }
        .user-card .card-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 12px;
        }
        .table-wrapper th,
        .table-wrapper td { padding: 12px 10px; }
        .table-wrapper td code { font-size: 13px; }
        .table-actions { display: flex; gap: 6px; flex-wrap: wrap; }
        .pagination-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 12px;
            padding: 16px 0 0;
            border-top: 1px solid #eee;
            margin-top: 16px;
        }
    </style>
</head>
<body>
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <%- include('partials/sidebar') %>

    <main class="main-content" id="main-content">
        <div class="top-bar">
            <div class="top-bar-left">
                <button class="sidebar-toggle" onclick="toggleSidebar()" aria-label="Toggle sidebar">‚ò∞</button>
                <h1 style="font-size: 24px; color: #333; margin: 0;">üë• <%= pageTitle %></h1>
            </div>
            <div class="top-bar-right">
                <div class="user-info">
                    <span>üë§ <%= username || 'Admin' %></span>
                    <% if (typeof req !== 'undefined' && req.session && req.session.role) { %>
                        <span class="user-badge"><%= req.session.role %></span>
                    <% } %>
                </div>
                <a href="/admin/change-password" class="btn-top">üîê Ubah Password</a>
                <a href="/logout" class="btn-top btn-logout">Logout</a>
            </div>
        </div>

        <div class="container">
            <!-- Search -->
            <div class="card" style="margin-bottom: 20px;">
                <div class="card-body">
                    <div class="search-container">
                        <span class="search-icon">üîç</span>
                        <input type="text" id="searchInput" class="search-input" placeholder="Cari user (ID, transaksi, pengeluaran, saldo)...">
                    </div>
                </div>
            </div>

            <!-- Users Table -->
            <div class="card user-card">
                <div class="card-header">
                    <h2 class="card-title">Daftar User</h2>
                    <span class="user-stats">
                        <% if (totalUsers != null && totalUsers > 0) { %>
                            Menampilkan <strong><%= fromItem %>‚Äì<%= toItem %></strong> dari <strong><%= totalUsers %></strong> user
                        <% } else if (users.length > 0) { %>
                            <strong><%= users.length %></strong> user
                        <% } %>
                    </span>
                </div>
                <div class="card-body">
                    <div class="table-wrapper">
                        <table>
                            <thead>
                                <tr>
                                    <th>User ID</th>
                                    <th>Jumlah Transaksi</th>
                                    <th>Pengeluaran</th>
                                    <th>Saldo</th>
                                    <th>Daftar</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody id="usersTableBody">
                                <% if (users.length === 0) { %>
                                    <tr>
                                        <td colspan="6">
                                            <div class="empty-state">
                                                <div class="empty-state-icon">üë•</div>
                                                <div class="empty-state-title">Belum ada user</div>
                                                <div class="empty-state-description">User akan muncul di sini setelah mendaftar lewat bot</div>
                                            </div>
                                        </td>
                                    </tr>
                                <% } else { %>
                                    <% users.forEach(u => { %>
                                        <tr>
                                            <td><code><%= u.id %></code></td>
                                            <td><%= u.jumlahtransaksi || 0 %></td>
                                            <td><%= formatrupiah(u.pengeluaran || 0) %></td>
                                            <td><strong><%= formatrupiah(u.saldo || 0) %></strong></td>
                                            <td><%= new Date(u.created_at).toLocaleDateString('id-ID') %></td>
                                            <td>
                                                <div class="table-actions">
                                                    <a href="/user/<%= u.id %>" class="btn-icon" title="Detail">üëÅÔ∏è</a>
                                                    <a href="/user/<%= u.id %>/topup" class="btn-icon" title="Top Up">üí∞</a>
                                                    <a href="/user/<%= u.id %>/kurangi" class="btn-icon" title="Kurangi Saldo">‚ûñ</a>
                                                    <a href="/user/<%= u.id %>/reset" class="btn-icon" title="Reset">üîÑ</a>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <% if (totalPages > 1) { %>
                        <div class="pagination-bar">
                            <span class="pagination-info">Halaman <%= currentPageNum %> dari <%= totalPages %></span>
                            <div class="pagination-controls">
                                <% if (currentPageNum > 1) { %>
                                    <a href="?page=<%= currentPageNum - 1 %>" class="pagination-btn">‚Üê Sebelumnya</a>
                                <% } else { %>
                                    <span class="pagination-btn" style="opacity: 0.5; cursor: not-allowed;">‚Üê Sebelumnya</span>
                                <% } %>
                                <% for (let i = Math.max(1, currentPageNum - 2); i <= Math.min(totalPages, currentPageNum + 2); i++) { %>
                                    <a href="?page=<%= i %>" class="pagination-btn <%= i === currentPageNum ? 'active' : '' %>"><%= i %></a>
                                <% } %>
                                <% if (currentPageNum < totalPages) { %>
                                    <a href="?page=<%= currentPageNum + 1 %>" class="pagination-btn">Selanjutnya ‚Üí</a>
                                <% } else { %>
                                    <span class="pagination-btn" style="opacity: 0.5; cursor: not-allowed;">Selanjutnya ‚Üí</span>
                                <% } %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <div class="quick-actions">
        <button class="quick-action-btn" onclick="window.scrollTo({top: 0, behavior: 'smooth'})" aria-label="Scroll to top" title="Scroll to top">‚Üë</button>
    </div>

    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById('sidebar');
            if (sidebar) {
                sidebar.classList.toggle('collapsed');
                sidebar.classList.toggle('open');
            }
        }
        document.addEventListener('click', function(e) {
            var sidebar = document.getElementById('sidebar');
            var toggleBtn = document.querySelector('.sidebar-toggle');
            if (window.innerWidth <= 768 && sidebar && sidebar.classList.contains('open') && !sidebar.contains(e.target) && toggleBtn && !toggleBtn.contains(e.target)) {
                sidebar.classList.remove('open');
            }
        });
        window.addEventListener('resize', function() {
            var sidebar = document.getElementById('sidebar');
            if (window.innerWidth > 768 && sidebar) sidebar.classList.remove('open');
        });
        document.addEventListener('DOMContentLoaded', function() {
            var searchInput = document.getElementById('searchInput');
            var tableBody = document.getElementById('usersTableBody');
            if (searchInput && tableBody && typeof SearchHelper !== 'undefined') {
                SearchHelper.init(searchInput, tableBody, [0, 1, 2, 3]);
            }
            var urlParams = new URLSearchParams(window.location.search);
            var success = urlParams.get('success');
            var error = urlParams.get('error');
            if (success && typeof toast !== 'undefined') {
                var messages = { topup: 'Saldo berhasil ditambahkan!', kurangi: 'Saldo berhasil dikurangi!', reset: 'Data berhasil direset!' };
                toast.success(messages[success] || 'Operasi berhasil!', 'Berhasil');
            }
            if (error && typeof toast !== 'undefined') {
                var messages = { notfound: 'User tidak ditemukan!', invalid: 'ID user tidak valid!', load: 'Gagal memuat data user!' };
                toast.error(messages[error] || 'Terjadi kesalahan!', 'Error');
            }
        });
    </script>
    <script src="/js/notifications.js"></script>
</body>
</html>
