<%
    const currentPage = 'user';
    const pageTitle = 'Kurangi Saldo';
    const saldoSaatIni = user.saldo || 0;
%>
<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="/js/ui-utils.js"></script>
    <style>
        .kurangi-card { max-width: 520px; }
        .kurangi-card .card-body { padding: 24px; }
        .kurangi-user-box {
            background: linear-gradient(135deg, #fff8e6 0%, #fff3cd 100%);
            padding: 20px;
            border-radius: 12px;
            border-left: 4px solid #ffc107;
            margin-bottom: 24px;
        }
        .kurangi-user-box p { margin: 0 0 8px 0; font-size: 15px; }
        .kurangi-user-box p:last-child { margin-bottom: 0; }
        .kurangi-user-box .saldo { font-size: 20px; font-weight: 700; color: #28a745; }
        .kurangi-user-box .warning { color: #856404; font-size: 14px; margin-top: 10px; }
    </style>
</head>
<body>
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <%- include('partials/sidebar') %>

    <main class="main-content" id="main-content">
        <div class="top-bar">
            <div class="top-bar-left">
                <button class="sidebar-toggle" onclick="toggleSidebar()" aria-label="Toggle sidebar">‚ò∞</button>
                <h1 style="font-size: 24px; color: #333; margin: 0;">‚ûñ Kurangi Saldo</h1>
            </div>
            <div class="top-bar-right">
                <div class="user-info">
                    <span>üë§ <%= username || 'Admin' %></span>
                    <% if (typeof req !== 'undefined' && req.session && req.session.role) { %>
                        <span class="user-badge"><%= req.session.role %></span>
                    <% } %>
                </div>
                <a href="/user/<%= user.id %>" class="btn-top">‚Üê Detail User</a>
                <a href="/admin/change-password" class="btn-top">üîê Ubah Password</a>
                <a href="/logout" class="btn-top btn-logout">Logout</a>
            </div>
        </div>

        <div class="container">
            <div class="form-container">
                <div class="card kurangi-card">
                    <div class="card-header">
                        <h2 class="card-title">Kurangi Saldo User</h2>
                    </div>
                    <div class="card-body">
                        <div class="kurangi-user-box">
                            <p><strong>User ID:</strong> <code><%= user.id %></code></p>
                            <p><strong>Saldo Saat Ini:</strong> <span class="saldo"><%= formatrupiah(saldoSaatIni) %></span></p>
                            <p class="warning">‚ö†Ô∏è Pastikan jumlah yang dikurangi tidak melebihi saldo saat ini.</p>
                        </div>

                        <% if (error) { %>
                            <div class="alert alert-error" style="margin-bottom: 20px;">‚ùå <%= error %></div>
                        <% } %>

                        <% if (saldoSaatIni <= 0) { %>
                            <div class="alert alert-warning" style="margin-bottom: 20px;">
                                Saldo user saat ini Rp 0. Tidak ada saldo yang dapat dikurangi.
                            </div>
                            <div class="form-actions">
                                <a href="/user/<%= user.id %>" class="btn btn-secondary">‚Üê Kembali ke Detail User</a>
                            </div>
                        <% } else { %>
                            <form method="POST" action="/user/<%= user.id %>/kurangi" data-loading>
                                <div class="form-group">
                                    <label class="form-label" for="jumlah">Jumlah yang Dikurangi (Rp) <span class="required">*</span></label>
                                    <input
                                        type="number"
                                        id="jumlah"
                                        name="jumlah"
                                        class="form-input"
                                        required
                                        min="1"
                                        max="<%= saldoSaatIni %>"
                                        placeholder="Maks. <%= formatrupiah(saldoSaatIni) %>"
                                        autofocus
                                    >
                                    <div class="form-help">Maksimal yang dapat dikurangi: <strong><%= formatrupiah(saldoSaatIni) %></strong></div>
                                </div>

                                <div class="form-actions">
                                    <button type="submit" class="btn btn-warning">‚ûñ Kurangi Saldo</button>
                                    <a href="/user/<%= user.id %>" class="btn btn-secondary">Batal</a>
                                </div>
                            </form>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <div class="quick-actions">
        <button class="quick-action-btn" onclick="window.scrollTo({top: 0, behavior: 'smooth'})" aria-label="Scroll to top" title="Scroll to top">‚Üë</button>
    </div>

    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById('sidebar');
            if (sidebar) {
                sidebar.classList.toggle('collapsed');
                sidebar.classList.toggle('open');
            }
        }
        document.addEventListener('click', function(e) {
            var sidebar = document.getElementById('sidebar');
            var toggleBtn = document.querySelector('.sidebar-toggle');
            if (window.innerWidth <= 768 && sidebar && sidebar.classList.contains('open') && !sidebar.contains(e.target) && toggleBtn && !toggleBtn.contains(e.target)) {
                sidebar.classList.remove('open');
            }
        });
        window.addEventListener('resize', function() {
            var sidebar = document.getElementById('sidebar');
            if (window.innerWidth > 768 && sidebar) sidebar.classList.remove('open');
        });
    </script>
    <script src="/js/notifications.js"></script>
</body>
</html>
