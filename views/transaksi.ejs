<%
    const currentPage = 'transaksi';
    const pageTitle = 'Daftar Transaksi';
    const hasFilters = filters.startDate || filters.endDate || filters.produk || filters.user || filters.minHarga || filters.maxHarga || filters.search;
    const filterParams = Object.keys(filters).filter(k => filters[k]).map(k => k + '=' + encodeURIComponent(filters[k]));
    const queryString = filterParams.length > 0 ? filterParams.join('&') : '';
    const exportUrl = hasFilters ? '/transaksi/export?' + queryString : '/transaksi/export';
    const fromItem = totalCount === 0 ? 0 : (currentPageNum - 1) * (typeof limit !== 'undefined' ? limit : 50) + 1;
    const toItem = Math.min(currentPageNum * (typeof limit !== 'undefined' ? limit : 50), totalCount || 0);
%>
<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="/js/ui-utils.js"></script>
    <style>
        .transaksi-stats {
            display: flex;
            align-items: center;
            gap: 12px;
            flex-wrap: wrap;
            font-size: 14px;
            color: #666;
        }
        .transaksi-stats strong { color: #333; }
        .filter-card .card-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 12px;
        }
        .filter-toggle {
            display: none;
            background: none;
            border: 1px solid #e0e0e0;
            padding: 8px 14px;
            border-radius: 8px;
            font-size: 14px;
            color: #666;
            cursor: pointer;
        }
        .filter-toggle:hover { background: #f5f5f5; color: #333; }
        @media (max-width: 768px) {
            .filter-toggle { display: inline-flex; align-items: center; gap: 6px; }
            .filter-card .filter-body { display: none; }
            .filter-card.filter-open .filter-body { display: block; }
        }
        .filter-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
            gap: 16px;
        }
        .filter-group { min-width: 0; }
        .filter-group .form-select,
        .filter-group .form-input { width: 100%; }
        .table-card .card-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 12px;
        }
        .table-wrapper table { width: 100%; }
        .table-wrapper th,
        .table-wrapper td { padding: 12px 10px; }
        .table-wrapper td code { font-size: 13px; }
        .table-actions { display: flex; gap: 6px; flex-wrap: wrap; }
        .pagination-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 12px;
            padding: 16px 0 0;
            border-top: 1px solid #eee;
            margin-top: 16px;
        }
    </style>
</head>
<body>
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <%- include('partials/sidebar') %>

    <main class="main-content" id="main-content">
        <div class="top-bar">
            <div class="top-bar-left">
                <button class="sidebar-toggle" onclick="toggleSidebar()" aria-label="Toggle sidebar">‚ò∞</button>
                <h1 style="font-size: 24px; color: #333; margin: 0;">üõçÔ∏è <%= pageTitle %></h1>
            </div>
            <div class="top-bar-right">
                <div class="user-info">
                    <span>üë§ <%= username || 'Admin' %></span>
                    <% if (req.session.role) { %>
                        <span class="user-badge"><%= req.session.role %></span>
                    <% } %>
                </div>
                <a href="<%= exportUrl %>" class="btn btn-success">üì• Export CSV</a>
                <a href="/admin/change-password" class="btn-top">üîê Ubah Password</a>
                <a href="/logout" class="btn-top btn-logout">Logout</a>
            </div>
        </div>

        <div class="container">
            <!-- Filter Card -->
            <div class="card filter-card" style="margin-bottom: 20px;" id="filterCard">
                <div class="card-header">
                    <h2 class="card-title">Filter Transaksi</h2>
                    <button type="button" class="filter-toggle" id="filterToggle" aria-expanded="false" aria-controls="filterBody">
                        <span aria-hidden="true">üîç</span> Filter
                    </button>
                </div>
                <div class="card-body filter-body" id="filterBody">
                    <form method="GET" action="/transaksi" id="filterForm">
                        <div class="search-container" style="margin-bottom: 16px;">
                            <span class="search-icon">üîç</span>
                            <input type="text" name="search" class="search-input" placeholder="Cari (Trx ID, nama produk, atau User ID)..." value="<%= filters.search || '' %>">
                        </div>
                        <div class="filter-container">
                            <div class="filter-group">
                                <label class="form-label">Tanggal Mulai</label>
                                <input type="date" name="startDate" class="form-input" value="<%= filters.startDate || '' %>">
                            </div>
                            <div class="filter-group">
                                <label class="form-label">Tanggal Akhir</label>
                                <input type="date" name="endDate" class="form-input" value="<%= filters.endDate || '' %>">
                            </div>
                            <div class="filter-group">
                                <label class="form-label">Produk</label>
                                <select name="produk" class="form-select">
                                    <option value="">Semua Produk</option>
                                    <% products.forEach(p => { %>
                                        <option value="<%= p.kode %>" <%= filters.produk === p.kode ? 'selected' : '' %>><%= p.nama %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="filter-group">
                                <label class="form-label">User ID</label>
                                <input type="number" name="user" class="form-input" placeholder="User ID" value="<%= filters.user || '' %>">
                            </div>
                            <div class="filter-group">
                                <label class="form-label">Harga Min (Rp)</label>
                                <input type="number" name="minHarga" class="form-input" placeholder="Min" value="<%= filters.minHarga || '' %>">
                            </div>
                            <div class="filter-group">
                                <label class="form-label">Harga Max (Rp)</label>
                                <input type="number" name="maxHarga" class="form-input" placeholder="Max" value="<%= filters.maxHarga || '' %>">
                            </div>
                        </div>
                        <div class="form-actions" style="margin-top: 16px;">
                            <button type="submit" class="btn btn-primary">üîç Terapkan Filter</button>
                            <a href="/transaksi" class="btn btn-secondary">üîÑ Reset</a>
                            <% if (hasFilters) { %>
                                <span class="transaksi-stats" style="margin-left: 8px;">Filter aktif</span>
                            <% } %>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Table Card -->
            <div class="card table-card">
                <div class="card-header">
                    <h2 class="card-title">Daftar Transaksi</h2>
                    <span class="transaksi-stats">
                        <% if (totalCount != null && totalCount > 0) { %>
                            Menampilkan <strong><%= fromItem %>‚Äì<%= toItem %></strong> dari <strong><%= totalCount %></strong> transaksi
                        <% } else if (transactions.length > 0) { %>
                            <strong><%= transactions.length %></strong> transaksi
                        <% } %>
                    </span>
                </div>
                <div class="card-body">
                    <div class="table-wrapper">
                        <table>
                            <thead>
                                <tr>
                                    <th>Tanggal</th>
                                    <th>User ID</th>
                                    <th>Produk</th>
                                    <th>Kode</th>
                                    <th>Jumlah</th>
                                    <th>Harga</th>
                                    <th>Trx ID</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (transactions.length === 0) { %>
                                    <tr>
                                        <td colspan="8">
                                            <div class="empty-state">
                                                <div class="empty-state-icon">üõçÔ∏è</div>
                                                <div class="empty-state-title">Belum ada transaksi</div>
                                                <div class="empty-state-description">Transaksi akan muncul di sini setelah ada pembelian dari bot</div>
                                            </div>
                                        </td>
                                    </tr>
                                <% } else { %>
                                    <% transactions.forEach(t => { %>
                                        <tr>
                                            <td><%= formatTanggal(t.tanggal) %></td>
                                            <td><code><%= t.id %></code></td>
                                            <td><%= t.nama %></td>
                                            <td><code><%= t.kode %></code></td>
                                            <td><%= t.jumlah %></td>
                                            <td><%= formatrupiah(t.harga) %></td>
                                            <td><code><%= t.trxid || '-' %></code></td>
                                            <td>
                                                <div class="table-actions">
                                                    <a href="/transaksi/<%= t.trx_uuid %>" class="btn-icon" title="Detail">üëÅÔ∏è</a>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <% if (totalPages > 1) { %>
                        <div class="pagination-bar">
                            <span class="pagination-info">
                                Halaman <%= currentPageNum %> dari <%= totalPages %>
                            </span>
                            <div class="pagination-controls">
                                <% if (currentPageNum > 1) { %>
                                    <a href="?<%= queryString ? queryString + '&' : '' %>page=<%= currentPageNum - 1 %>" class="pagination-btn">‚Üê Sebelumnya</a>
                                <% } else { %>
                                    <span class="pagination-btn" style="opacity: 0.5; cursor: not-allowed;">‚Üê Sebelumnya</span>
                                <% } %>
                                <% if (currentPageNum < totalPages) { %>
                                    <a href="?<%= queryString ? queryString + '&' : '' %>page=<%= currentPageNum + 1 %>" class="pagination-btn">Selanjutnya ‚Üí</a>
                                <% } else { %>
                                    <span class="pagination-btn" style="opacity: 0.5; cursor: not-allowed;">Selanjutnya ‚Üí</span>
                                <% } %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <div class="quick-actions">
        <button class="quick-action-btn" onclick="window.scrollTo({top: 0, behavior: 'smooth'})" aria-label="Scroll to top" title="Scroll to top">‚Üë</button>
    </div>

    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById('sidebar');
            if (sidebar) {
                sidebar.classList.toggle('collapsed');
                sidebar.classList.toggle('open');
            }
        }
        var filterCard = document.getElementById('filterCard');
        var filterToggle = document.getElementById('filterToggle');
        var filterBody = document.getElementById('filterBody');
        if (filterToggle && filterBody) {
            filterToggle.addEventListener('click', function() {
                filterCard.classList.toggle('filter-open');
                var open = filterCard.classList.contains('filter-open');
                filterToggle.setAttribute('aria-expanded', open);
            });
        }
        document.addEventListener('click', function(e) {
            var sidebar = document.getElementById('sidebar');
            var toggleBtn = document.querySelector('.sidebar-toggle');
            if (window.innerWidth <= 768 && sidebar && sidebar.classList.contains('open') && !sidebar.contains(e.target) && toggleBtn && !toggleBtn.contains(e.target)) {
                sidebar.classList.remove('open');
            }
        });
        window.addEventListener('resize', function() {
            var sidebar = document.getElementById('sidebar');
            if (window.innerWidth > 768 && sidebar) sidebar.classList.remove('open');
        });
    </script>
    <script src="/js/notifications.js"></script>
</body>
</html>
