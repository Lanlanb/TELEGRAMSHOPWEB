<%
    const currentPage = 'transaksi';
    const pageTitle = 'Detail Transaksi';
%>
<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="/js/ui-utils.js"></script>
    <style>
        .detail-page .card { margin-bottom: 20px; }
        .detail-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 16px;
            margin-bottom: 24px;
        }
        .detail-stat {
            background: linear-gradient(135deg, #f8f9fa 0%, #eee 100%);
            padding: 20px;
            border-radius: 12px;
            border-left: 4px solid #667eea;
        }
        .detail-stat .label {
            font-size: 13px;
            color: #666;
            margin-bottom: 6px;
        }
        .detail-stat .value {
            font-size: 20px;
            font-weight: 700;
            color: #333;
        }
        .detail-stat .value.harga { color: #28a745; }
        .info-rows { padding: 0; }
        .info-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 0;
            border-bottom: 1px solid #eee;
            gap: 16px;
            flex-wrap: wrap;
        }
        .info-row:last-child { border-bottom: none; }
        .info-label { color: #666; font-weight: 500; font-size: 14px; }
        .info-value { color: #333; font-weight: 600; font-size: 14px; }
        .info-value code { font-size: 13px; padding: 4px 8px; background: #f0f0f0; border-radius: 6px; }
        .detail-actions { display: flex; gap: 12px; flex-wrap: wrap; margin-top: 24px; }
    </style>
</head>
<body>
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <%- include('partials/sidebar') %>

    <main class="main-content" id="main-content">
        <div class="top-bar">
            <div class="top-bar-left">
                <button class="sidebar-toggle" onclick="toggleSidebar()" aria-label="Toggle sidebar">‚ò∞</button>
                <h1 style="font-size: 24px; color: #333; margin: 0;">üìã Detail Transaksi</h1>
            </div>
            <div class="top-bar-right">
                <div class="user-info">
                    <span>üë§ <%= username || 'Admin' %></span>
                    <% if (typeof req !== 'undefined' && req.session && req.session.role) { %>
                        <span class="user-badge"><%= req.session.role %></span>
                    <% } %>
                </div>
                <a href="/transaksi" class="btn-top">‚Üê Transaksi</a>
                <a href="/admin/change-password" class="btn-top">üîê Ubah Password</a>
                <a href="/logout" class="btn-top btn-logout">Logout</a>
            </div>
        </div>

        <div class="container detail-page">
            <!-- Header & Stats -->
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Transaksi <code><%= transaction.trxid || transaction.trx_uuid %></code></h2>
                </div>
                <div class="card-body">
                    <div class="detail-stats">
                        <div class="detail-stat">
                            <div class="label">Total Harga</div>
                            <div class="value harga"><%= formatrupiah(transaction.harga) %></div>
                        </div>
                        <div class="detail-stat">
                            <div class="label">Jumlah</div>
                            <div class="value"><%= transaction.jumlah %> item</div>
                        </div>
                        <div class="detail-stat">
                            <div class="label">Tanggal</div>
                            <div class="value" style="font-size: 16px;"><%= formatTanggal(transaction.tanggal) %></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informasi Produk -->
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">üì¶ Informasi Produk</h2>
                </div>
                <div class="card-body info-rows">
                    <div class="info-row">
                        <span class="info-label">Nama Produk</span>
                        <span class="info-value"><%= transaction.nama %></span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Kode Produk</span>
                        <span class="info-value"><code><%= transaction.kode %></code></span>
                    </div>
                    <% if (produk) { %>
                        <div class="info-row">
                            <span class="info-label">Harga Satuan</span>
                            <span class="info-value"><%= formatrupiah(produk.harga) %></span>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Informasi User -->
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">üë§ Informasi User</h2>
                </div>
                <div class="card-body info-rows">
                    <div class="info-row">
                        <span class="info-label">User ID</span>
                        <span class="info-value"><code><%= transaction.id %></code></span>
                    </div>
                    <% if (user) { %>
                        <div class="info-row">
                            <span class="info-label">Total Transaksi User</span>
                            <span class="info-value"><%= user.jumlahtransaksi || 0 %></span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Total Pengeluaran User</span>
                            <span class="info-value"><%= formatrupiah(user.pengeluaran || 0) %></span>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Informasi Transaksi -->
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">üîñ Informasi Transaksi</h2>
                </div>
                <div class="card-body info-rows">
                    <div class="info-row">
                        <span class="info-label">Trx ID</span>
                        <span class="info-value"><code><%= transaction.trxid || '-' %></code></span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">UUID</span>
                        <span class="info-value"><code style="font-size: 12px;"><%= transaction.trx_uuid %></code></span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Created At</span>
                        <span class="info-value"><%= formatTanggal(transaction.created_at) %></span>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="card">
                <div class="card-body">
                    <div class="detail-actions">
                        <a href="/user/<%= transaction.id %>" class="btn btn-primary">üë§ Lihat Profil User</a>
                        <a href="/produk" class="btn btn-primary">üì¶ Lihat Produk</a>
                        <a href="/transaksi" class="btn btn-secondary">‚Üê Kembali ke Daftar</a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <div class="quick-actions">
        <button class="quick-action-btn" onclick="window.scrollTo({top: 0, behavior: 'smooth'})" aria-label="Scroll to top" title="Scroll to top">‚Üë</button>
    </div>

    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById('sidebar');
            if (sidebar) {
                sidebar.classList.toggle('collapsed');
                sidebar.classList.toggle('open');
            }
        }
        document.addEventListener('click', function(e) {
            var sidebar = document.getElementById('sidebar');
            var toggleBtn = document.querySelector('.sidebar-toggle');
            if (window.innerWidth <= 768 && sidebar && sidebar.classList.contains('open') && !sidebar.contains(e.target) && toggleBtn && !toggleBtn.contains(e.target)) {
                sidebar.classList.remove('open');
            }
        });
        window.addEventListener('resize', function() {
            var sidebar = document.getElementById('sidebar');
            if (window.innerWidth > 768 && sidebar) sidebar.classList.remove('open');
        });
    </script>
    <script src="/js/notifications.js"></script>
</body>
</html>
