<%
    const currentPage = 'admin-change-password';
    const pageTitle = 'Ubah Password';
%>
<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="/js/ui-utils.js"></script>
    <style>
        .password-card { max-width: 480px; }
        .password-card .card-body { padding: 24px; }
        .input-wrap {
            position: relative;
        }
        .input-wrap .form-input { padding-right: 44px; }
        .toggle-password {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            padding: 4px;
            cursor: pointer;
            color: #666;
            font-size: 18px;
            line-height: 1;
            border-radius: 4px;
        }
        .toggle-password:hover { color: #333; background: #eee; }
        .password-hint {
            font-size: 12px;
            color: #666;
            margin-top: 6px;
        }
    </style>
</head>
<body>
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <%- include('partials/sidebar') %>

    <main class="main-content" id="main-content">
        <div class="top-bar">
            <div class="top-bar-left">
                <button class="sidebar-toggle" onclick="toggleSidebar()" aria-label="Toggle sidebar">‚ò∞</button>
                <h1 style="font-size: 24px; color: #333; margin: 0;">üîê Ubah Password</h1>
            </div>
            <div class="top-bar-right">
                <div class="user-info">
                    <span>üë§ <%= username || 'Admin' %></span>
                    <% if (typeof req !== 'undefined' && req.session && req.session.role) { %>
                        <span class="user-badge"><%= req.session.role %></span>
                    <% } %>
                </div>
                <a href="/" class="btn-top">‚Üê Dashboard</a>
                <a href="/logout" class="btn-top btn-logout">Logout</a>
            </div>
        </div>

        <div class="container">
            <div class="form-container">
                <div class="card password-card">
                    <div class="card-header">
                        <h2 class="card-title">Ganti Password Akun</h2>
                    </div>
                    <div class="card-body">
                        <% if (success === 'changed') { %>
                            <div class="alert alert-success" style="margin-bottom: 20px;">
                                ‚úÖ Password berhasil diubah. Gunakan password baru untuk login berikutnya.
                            </div>
                        <% } %>

                        <% if (error) { %>
                            <div class="alert alert-error" style="margin-bottom: 20px;">‚ùå <%= error %></div>
                        <% } %>

                        <form method="POST" action="/admin/change-password" data-loading>
                            <div class="form-group">
                                <label class="form-label" for="currentPassword">Password Lama <span class="required">*</span></label>
                                <div class="input-wrap">
                                    <input
                                        type="password"
                                        id="currentPassword"
                                        name="currentPassword"
                                        class="form-input"
                                        required
                                        autofocus
                                        placeholder="Masukkan password saat ini"
                                        autocomplete="current-password"
                                    >
                                    <button type="button" class="toggle-password" onclick="toggleVisibility('currentPassword', this)" aria-label="Tampilkan password">üëÅ</button>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="newPassword">Password Baru <span class="required">*</span></label>
                                <div class="input-wrap">
                                    <input
                                        type="password"
                                        id="newPassword"
                                        name="newPassword"
                                        class="form-input"
                                        required
                                        minlength="6"
                                        placeholder="Min. 6 karakter"
                                        autocomplete="new-password"
                                    >
                                    <button type="button" class="toggle-password" onclick="toggleVisibility('newPassword', this)" aria-label="Tampilkan password">üëÅ</button>
                                </div>
                                <div class="form-help">Minimal 6 karakter. Gunakan kombinasi huruf dan angka untuk keamanan lebih baik.</div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="confirmPassword">Konfirmasi Password Baru <span class="required">*</span></label>
                                <div class="input-wrap">
                                    <input
                                        type="password"
                                        id="confirmPassword"
                                        name="confirmPassword"
                                        class="form-input"
                                        required
                                        minlength="6"
                                        placeholder="Ulangi password baru"
                                        autocomplete="new-password"
                                    >
                                    <button type="button" class="toggle-password" onclick="toggleVisibility('confirmPassword', this)" aria-label="Tampilkan password">üëÅ</button>
                                </div>
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">üíæ Ubah Password</button>
                                <a href="/" class="btn btn-secondary">Batal</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <div class="quick-actions">
        <button class="quick-action-btn" onclick="window.scrollTo({top: 0, behavior: 'smooth'})" aria-label="Scroll to top" title="Scroll to top">‚Üë</button>
    </div>

    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('collapsed');
            document.getElementById('sidebar').classList.toggle('open');
        }
        function toggleVisibility(inputId, btn) {
            var el = document.getElementById(inputId);
            if (!el) return;
            if (el.type === 'password') {
                el.type = 'text';
                btn.setAttribute('aria-label', 'Sembunyikan password');
                btn.textContent = 'üôà';
            } else {
                el.type = 'password';
                btn.setAttribute('aria-label', 'Tampilkan password');
                btn.textContent = 'üëÅ';
            }
        }
        document.addEventListener('click', function(e) {
            var sidebar = document.getElementById('sidebar');
            var toggleBtn = document.querySelector('.sidebar-toggle');
            if (window.innerWidth <= 768 && sidebar && sidebar.classList.contains('open') && !sidebar.contains(e.target) && toggleBtn && !toggleBtn.contains(e.target)) {
                sidebar.classList.remove('open');
            }
        });
        window.addEventListener('resize', function() {
            var sidebar = document.getElementById('sidebar');
            if (window.innerWidth > 768 && sidebar) sidebar.classList.remove('open');
        });
    </script>
    <script src="/js/notifications.js"></script>
</body>
</html>
