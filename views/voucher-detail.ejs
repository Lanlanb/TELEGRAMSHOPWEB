<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <style>
        .detail-container {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            max-width: 800px;
            margin: 0 auto;
        }
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .info-card {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            border-left: 4px solid #667eea;
        }
        .info-card h3 {
            font-size: 12px;
            color: #666;
            margin-bottom: 8px;
        }
        .info-card p {
            font-size: 18px;
            font-weight: bold;
            color: #333;
        }
        .status-badge {
            padding: 8px 16px;
            border-radius: 12px;
            font-size: 14px;
            font-weight: bold;
            display: inline-block;
        }
        .status-baru {
            background: #d4edda;
            color: #155724;
        }
        .status-aktif {
            background: #fff3cd;
            color: #856404;
        }
        .status-habis {
            background: #f8d7da;
            color: #721c24;
        }
        .products-list {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            margin-top: 10px;
        }
        .product-tag {
            display: inline-block;
            background: #667eea;
            color: white;
            padding: 5px 12px;
            border-radius: 6px;
            font-size: 12px;
            margin: 5px 5px 5px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 15px;">
                <div>
                    <h1>üéüÔ∏è Detail Voucher</h1>
                    <nav>
                        <a href="/">Dashboard</a>
                        <a href="/produk">Produk</a>
                        <a href="/transaksi">Transaksi</a>
                        <a href="/user">User</a>
                        <a href="/deposit">Deposit</a>
                        <a href="/analitik">Analitik</a>
                        <a href="/laporan">Laporan</a>
                        <a href="/voucher">Voucher</a>
                    </nav>
                </div>
                <div style="display: flex; align-items: center; gap: 15px;">
                    <span style="color: #666; font-size: 14px;">
                        üë§ <%= username || 'Admin' %>
                    </span>
                    <a href="/logout" style="padding: 8px 16px; background: #dc3545; color: white; text-decoration: none; border-radius: 6px; font-size: 14px;">
                        Logout
                    </a>
                </div>
            </div>
        </header>

        <div class="detail-container">
            <div class="info-grid">
                <div class="info-card">
                    <h3>Kode Voucher</h3>
                    <p><code style="font-size: 24px;"><%= voucher.kode %></code></p>
                </div>
                <div class="info-card">
                    <h3>Potongan</h3>
                    <p style="color: #28a745; font-size: 24px;"><%= formatrupiah(voucher.potongan) %></p>
                </div>
                <div class="info-card">
                    <h3>Limit Penggunaan</h3>
                    <p><%= voucher.limit %></p>
                </div>
                <div class="info-card">
                    <h3>Jumlah Penggunaan</h3>
                    <p><%= stats.jumlahPenggunaan %></p>
                </div>
                <div class="info-card">
                    <h3>Sisa Limit</h3>
                    <p style="color: <%= stats.sisaLimit > 0 ? '#28a745' : '#dc3545' %>;"><%= stats.sisaLimit %></p>
                </div>
                <div class="info-card">
                    <h3>Status</h3>
                    <p>
                        <% if (stats.status === 'baru') { %>
                            <span class="status-badge status-baru">üÜï Baru</span>
                        <% } else if (stats.status === 'aktif') { %>
                            <span class="status-badge status-aktif">‚úÖ Aktif</span>
                        <% } else { %>
                            <span class="status-badge status-habis">‚õî Habis</span>
                        <% } %>
                    </p>
                </div>
            </div>

            <div style="background: #f8f9fa; padding: 20px; border-radius: 10px; margin-bottom: 20px;">
                <h3 style="margin-bottom: 15px;">Produk yang Berlaku</h3>
                <div class="products-list">
                    <% if (produkInfo.length === 0 || (produkInfo[0] && produkInfo[0].kode === 'all')) { %>
                        <span class="product-tag" style="background: #28a745;">Semua Produk</span>
                    <% } else { %>
                        <% produkInfo.forEach(p => { %>
                            <span class="product-tag"><%= p.nama %> (<code><%= p.kode %></code>)</span>
                        <% }) %>
                    <% } %>
                </div>
            </div>

            <div style="background: #f8f9fa; padding: 20px; border-radius: 10px; margin-bottom: 20px;">
                <h3 style="margin-bottom: 15px;">User yang Menggunakan</h3>
                <% if (Array.isArray(voucher.user) && voucher.user.length > 0) { %>
                    <p>Total: <strong><%= voucher.user.length %></strong> user</p>
                    <div style="margin-top: 10px;">
                        <% voucher.user.slice(0, 20).forEach(userId => { %>
                            <a href="/user/<%= userId %>" style="display: inline-block; background: #667eea; color: white; padding: 5px 12px; border-radius: 6px; text-decoration: none; font-size: 12px; margin: 5px 5px 5px 0;">
                                User <%= userId %>
                            </a>
                        <% }) %>
                        <% if (voucher.user.length > 20) { %>
                            <span style="color: #666; font-size: 12px;">... dan <%= voucher.user.length - 20 %> user lainnya</span>
                        <% } %>
                    </div>
                <% } else { %>
                    <p style="color: #666;">Belum ada user yang menggunakan voucher ini</p>
                <% } %>
            </div>

            <div style="display: flex; gap: 10px; margin-top: 30px;">
                <a href="/voucher/edit/<%= voucher.id %>" class="btn" style="background: #667eea; color: white; text-decoration: none; padding: 12px 24px; border-radius: 8px; font-size: 16px; font-weight: 600;">
                    ‚úèÔ∏è Edit Voucher
                </a>
                <a href="/voucher/hapus/<%= voucher.id %>" class="btn" style="background: #dc3545; color: white; text-decoration: none; padding: 12px 24px; border-radius: 8px; font-size: 16px; font-weight: 600;">
                    üóëÔ∏è Hapus Voucher
                </a>
                <a href="/voucher" class="btn" style="background: #6c757d; color: white; text-decoration: none; padding: 12px 24px; border-radius: 8px; font-size: 16px; font-weight: 600;">
                    ‚Üê Kembali
                </a>
            </div>
        </div>
    </div>
</body>
</html>

